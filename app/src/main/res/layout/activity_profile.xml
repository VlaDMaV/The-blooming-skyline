<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <Button
        android:id="@+id/button_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Войти"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Выйти"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_hp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="544dp"
        android:text="Зарегистрироваться"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Мои заказы"
        app:layout_constraintBottom_toTopOf="@+id/ButtonForSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/FirstNameGAD"
        android:layout_width="290px"
        android:layout_height="100px"
        android:text="ИМЯ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/LastNameGAD"
        android:layout_width="290px"
        android:layout_height="100px"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:text="ФАМИЛИЯ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstNameGAD" />

    <TextView
        android:id="@+id/GenderGAD"
        android:layout_width="290px"
        android:layout_height="100px"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:text="Пол"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LastNameGAD" />

    <TextView
        android:id="@+id/PhoneGAD"
        android:layout_width="290px"
        android:layout_height="100px"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:text="Телефон"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GenderGAD" />

    <TextView
        android:id="@+id/CardGAD"
        android:layout_width="290px"
        android:layout_height="100px"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:text="Номер карты"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneGAD" />

    <EditText
        android:id="@+id/NameAddGAD"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/FirstNameGAD"
        tools:layout_editor_absoluteY="217dp" />

    <EditText
        android:id="@+id/LastNameAddGAD"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/LastNameGAD"
        app:layout_constraintTop_toBottomOf="@+id/NameAddGAD" />

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toEndOf="@+id/GenderGAD"
        app:layout_constraintTop_toBottomOf="@+id/LastNameAddGAD">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="М" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ж" />
    </RadioGroup>

    <EditText
        android:id="@+id/PhoneAddGAD"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/PhoneGAD"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupGender" />

    <EditText
        android:id="@+id/CardAddGAD"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/CardGAD"
        app:layout_constraintTop_toBottomOf="@+id/PhoneAddGAD" />

    <Button
        android:id="@+id/ButtonForSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить данные"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

</androidx.constraintlayout.widget.ConstraintLayout>